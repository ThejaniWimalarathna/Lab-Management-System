body{
	margin:0;
	padding:0;
	font-family: montserrat;
	background-color: #041d26;
	
}

/*--- Section 1 - Background cover ---*/
.navbar{
	width:85%;
	margin:auto;
	padding:35px 0;
	display:flex;
	align-items:center;
	justify-content:space-between;
}

.logo{
	width:200px;
	cursor:pointer;
}

.navbar ul li{
	list-style: none;
	display:inline-block;
	margin:0 20px;
	position:relative;
}

.navbar ul li a{
	text-decoration:none;
	color:#fff;
	text-transform:uppercase;
	font-size: 14px;
}

.navbar ul li::after{
	content:'';
	height:3px;
	width:0;
	background:#f44336;
	position:absolute;
	left:0;
	bottom:-10px;
	transition:0.5s;
}

.navbar ul li:hover::after{
	width:100%;
}

.txt{
	margin-bottom: 5%;
	text-align: center;
	color: #fff;
	font-size: 30px;
}

.dot {
	height: 5px;
	width: 5px;
	background-color: #f44336;
	border-radius: 50%;
	display: inline-block;
}

.container {
	position: relative;
	max-width: 800px;
	margin: 30px auto;
}

.img{
	opacity: 0.5;
	border-radius: 10px;
}

.container .content {
	position: absolute;
	bottom: 0;
	background: rgb(0, 0, 0);
	background: rgba(0, 0, 0, 0.5);
	color: #fff;
	width: 100%;
	padding: 20px;
	border-radius: 0 0 10px 10px;;
}

.line{
	border: 2px solid #fff;
}

.footer{
	background: #fff;
}

.privacy{
	text-align: center;
	margin-top: 50px;
	margin-bottom: 4px;
	padding-top: 10px;
}

.create{
	text-align: center;
	margin-bottom: 10px;
	padding-bottom: 10px;
}

.link{
	margin: 2px;
	text-decoration: none;
}